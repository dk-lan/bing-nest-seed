{
    "appenders": {
        "trace": {
            "type": "dateFile",
            "filename": "log/trace/trace",
            "pattern": "-yyyy-MM-dd.log",
            "alwaysIncludePattern": true,
            "daysToKeep": 7,
            "keepFileExt": true,
            "layout": {
                "type": "pattern",
                "pattern": "opTime: %d{yyyy-MM-dd hh:mm:ss.SSS} level: %p bussiness: %c %content: %n%m %x{line}",
                "tokens": {
                    "line": "\r\n-----------------------------------------------------------------------------------------------------------------------------"
                }
            }
        },
        "debug": {
